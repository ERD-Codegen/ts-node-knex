	},
	"license": "MIT",
	"author": {
		"name": "Ken Yip",
		"email": "ken20206@gmail.com",
		"url": "https://kenyip.cc"
	},
	"main": "index.js",
	"workspaces": [
		"../../packages/config",
		"../../packages/core",
		"../../packages/types",
		"../../packages/utils"
	],
	"scripts": {
		"build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
		"check-types": "tsc --skipLibCheck --noEmit",
		"dev": "NODE_ENV=development ts-node-dev --no-notify --exit-child -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules ./local.ts",
		"format": "prettier --write .",
		"lint": "eslint --ext .ts --ext .ts .",
		"lint:fix": "eslint --ext .ts --ext .ts . --fix",
		"start:ci": "NODE_ENV=ci pm2 start ./local.js",
		"test": "NODE_ENV=testing ts-mocha -r tsconfig-paths/register ./test/**/*.spec.ts"
	},
	"dependencies": {
		"@conduit/config": "*",
		"@conduit/core": "*",
		"@conduit/types": "*",
		"@conduit/utils": "*",
		"@types/md5": "^2.3.2",
		"@vendia/serverless-express": "^4.10.1",
		"body-parser": "^1.20.2",
		"chalk": "4.1.2",
		"compression": "^1.7.4",
		"dotenv": "^16.0.3",
		"dotenv-expand": "^10.0.0",
		"express": "^4.18.2",
		"express-promise-router": "^4.1.1",
		"helmet": "^6.1.1",
		"joi": "^17.7.0",
		"jsonwebtoken": "^9.0.0",
		"lodash": "^4.17.21",
		"md5": "^2.3.0",
		"moment": "^2.29.4",
		"morgan": "^1.10.0",
		"p-all": "2.1.0",
		"p-map": "4.0.0",
		"uuid": "^9.0.0"
	},
	"devDependencies": {
		"@faker-js/faker": "^7.6.0",
		"@trivago/prettier-plugin-sort-imports": "^4.1.1",
		"@types/bcrypt": "^5.0.0",
		"@types/body-parser": "^1.19.2",
		"@types/chai": "^4.3.4",
		"@types/compression": "^1.7.2",
		"@types/express": "^4.17.14",
		"@types/json-schema": "^7.0.11",
		"@types/lodash": "^4.14.192",
		"@types/mocha": "^10.0.1",
		"@types/morgan": "^1.9.4",
		"@types/node": "^18.11.9",
		"@types/semver": "^7.3.13",
		"@types/supertest": "^2.0.12",
		"@types/uuid": "^8.3.4",
		"@typescript-eslint/eslint-plugin": "^5.59.0",
		"@typescript-eslint/parser": "^5.57.0",
		"chai": "^4.3.7",
		"eslint": "^7.32.0",
		"eslint-config-airbnb-base": "^14.2.1",
		"eslint-config-airbnb-typescript": "^17.0.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-config-turbo": "^1.9.3",
		"eslint-plugin-import": "^2.22.0",
		"eslint-plugin-prettier": "^4.2.1",
		"mocha": "^10.1.0",
		"pm2": "^5.3.0",
		"prettier": "^2.8.7",
		"prettier-plugin-packagejson": "^2.4.3",
		"source-map-support": "^0.5.21",
		"supertest": "^6.3.3",
		"ts-mocha": "^10.0.0",
		"ts-node": "^10.9.1",
