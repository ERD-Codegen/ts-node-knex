{
	"name": "@conduit/server",
	"version": "1.0.0",
	"private": true,
	"description": "The server app that provides RESTful API endpoints for this app",
	"keywords": [
		"conduit",
		"server",
		"apis"
	],
	"bugs": {
		"url": "https://github.com/kenyipp/realworld-nodejs-example-app/issues",
		"email": "ken20206@gmail.com"
	},
	"repository": {
		"type": "git",
